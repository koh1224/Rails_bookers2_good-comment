<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@bookfind.user) do %>
            <%= attachment_image_tag(@bookfind.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @bookfind.user.name %>
            <% end %>
          </td>
          <td><%= link_to @bookfind.title, book_path(@bookfind) %></td>
          <td><%= @bookfind.body %></td>
          <td>
          <div id="book_<%= @bookfind.id %>">
            <%= render partial: 'favorites/favorites', locals: {book: @bookfind} %>
          </div>
          </td>
          <td>
            <p>コメント数:<%= @bookfind.book_comments.count %> </p>
          </td>
          <% if @bookfind.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@bookfind), class: "btn btn-sm btn-success edit_book_#{@bookfind.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@bookfind), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@bookfind.id}"%></td>
          <% end %>
        </tr>
      </table>
      <div id="comment_<%= @bookfind.id %>">
      <%= render partial: 'books/comment', locals: { comments: @book_comments } %>
      </div>
      <div id="comment_<%= @bookfind.id %>">
        <%= form_with(model:[@bookfind, @book_comment], remote: true, method: :post, value: "" ) do |f| %>
          <%= f.text_area :comment, id: "book_comment" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>